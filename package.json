{
  "private": true,
  "workspaces": [
    "widget",
    "server",
    "dashboard"
  ],
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  },
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write '**/*.+(js|ts|tsx|md|css|json)'",
    "lint": "yarn workspaces run lint"
  },
  "lint-staged": {
    "*.+(js|ts|tsx|css)": [
      "yarn lint --fix"
    ],
    "*.+(js|ts|tsx|md|css|json)": [
      "prettier --write"
    ]
  }
}
